{% extends 'base-map.html.twig' %}

{% block title %}{{ parent() }} - Map{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('map-maxfield') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('map-maxfield') }}
{% endblock %}

{% block body %}
    <div id="selection-count">0</div>

    <div id="controls-container">
        <div id="selection-buttons" class="btn-group">
            <button id="selectToggle" title="Toggle select mode" class="btn btn-outline-success btn-sm">
                <span class="oi oi-plus"></span>
            </button>
            <button id="selectRect" title="Select Rectangle" class="btn btn-outline-secondary btn-sm">
                <span class="oi oi-media-stop"></span>
            </button>
            <button id="selectPoly" title="Select Polygon" class="btn btn-outline-secondary btn-sm">
                <span class="oi oi-medical-cross"></span>
            </button>
        </div>
        <div class="btn-group-vertical">
            <button class="btn btn-outline-primary btn-sm" data-bs-toggle="modal" data-bs-target="#maxfieldModal">
                MaxField
            </button>
{#            <button id="result_maxFields" class="btn btn-outline-secondary btn-sm">MaxField</button>#}
{#            <button id="result_Gpx" class="btn btn-outline-secondary btn-sm">Gpx</button>#}
        </div>
    </div>

    <div id="map"></div>

    <!-- Modal -->
    <div class="modal fade" id="maxfieldModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Create MaxField</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="controls">
                        <form>
                            <div class="form-group row">
                                <label for="build_name" class="col-sm-2 col-form-label col-form-label-lg">Name</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control form-control-lg" id="build_name"
                                           placeholder="Maxfield name">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="players_num" class="col-sm-2 col-form-label">#</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="players_num"
                                           placeholder="Number of agents (1)">
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-2">Skip</div>
                                <div class="col-sm-10">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="skip_plots">
                                        <label class="form-check-label" for="skip_plots">
                                            Plots
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="skip_step_plots">
                                        <label class="form-check-label" for="skip_step_plots">
                                            Step Plots
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="status"></div>
                    <button id="build" class="btn btn-outline-primary btn-sm">Create MaxField</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="resultModal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">MaxFields</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <textarea class="modal-body" rows="15" cols="150" id="resultText"></textarea>
                <button id="copyToClipboard" class="btn btn-success">Copy</button>
            </div>
        </div>
    </div>
{% endblock %}
