{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}{% endblock %}

{% block body %}
    {% if is_granted('ROLE_AGENT') %}
        {% for row in maxfields|batch(4) %}
            <div class="row">
                {% for maxfield in row %}
                    <div class="col-3">
                        <a class="btn btn-outline-success"
                           href="{{ path('maxfield_play', {'id': maxfield.id}) }}">
                            {{ maxfield.name }}
                        </a>
                    </div>
                {% endfor %}
            </div>
        {% endfor %}
    {% else %}
        <h4>
            Please <a href="{{ path('login') }}">log in</a>!
        </h4>
    {% endif %}
    <div class="text-center">
        <img
                src="https://user-images.githubusercontent.com/33978/206504470-ec700fe1-66d6-4da4-9b74-4d601239da2e.gif"
                height="100%"
                alt="Plan movie"
        >
    </div>
{% endblock %}
