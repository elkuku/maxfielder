{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - MaxFields{% endblock %}

{% block body %}
    <h3>MaxFields</h3>
    {% for maxfield in maxfields %}
        <div class="row row-hover">
            <div class="col-1">
                {% if 'running' == maxfield.status %}
                <div class="spinner-border spinner-border-sm" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                {% endif %}
                {{ maxfield.status }}</div>
            <div class="col-7">
                <a href="{{ path('maxfield_play', {'id': maxfield.id}) }}">{{ maxfield.name }}</a>
            </div>
            <div class="col-4">
                <a href="{{ path('max_fields_result', {'item': maxfield.path}) }}">View</a>
                <a href="{{ path('max_fields_delete', {'id': maxfield.id}) }}">Delete</a>
            </div>
        </div>
    {% endfor %}
{% endblock %}
