<div class="modal fade" tabindex="-1" data-modal-form-target="modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">{{ modalTitle|default('Modal') }}</h5>
                <button type="button"
                        class="btn-close close"
                        data-dismiss="modal"
                        data-bs-dismiss="modal"
                        aria-label="Close"
                >
                </button>
            </div>
            <div class="modal-body"
                 data-modal-form-target="modalBody"
                 data-action="submit->modal-form#submitForm"
            >
                {{ modalContent|default('Loading...'|trans) }}
            </div>
            <div class="modal-footer">
                <button
                        type="button"
                        class="btn btn-secondary"
                        data-dismiss="modal"
                        data-bs-dismiss="modal"
                        title="{{ 'Cancel'|trans }}"
                >
                    <span class="bi-arrow-left"></span>
                </button>
                <button
                        type="button"
                        class="btn btn-primary"
                        data-action="modal-form#submitForm"
                        title="{{ 'Save'|trans }}"
                >
                    <span class="bi-check-lg"></span>
                </button>
            </div>
        </div>
    </div>
</div>
