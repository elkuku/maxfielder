{
    "name": "elkuku/symfony-playground-one",
    "description": "An opinionated symfony project template",
    "type": "project",
    "license": "WTFPL",
    "require": {
        "php": ">=8.5",
        "ext-ctype": "*",
        "ext-curl": "*",
        "ext-gd": "*",
        "ext-iconv": "*",
        "ext-intl": "*",
        "composer/package-versions-deprecated": "^1.11",
        "doctrine/doctrine-bundle": "^3.0",
        "doctrine/doctrine-migrations-bundle": "^4.0",
        "doctrine/orm": "^3",
        "easycorp/easyadmin-bundle": "^4.0",
        "elkuku/kuku-sf-system-tools-bundle": "^1.0",
        "elkuku/maxfield-parser": "@dev",
        "elkuku/symfony-utils": "dev-master",
        "google/apiclient": "^2.13",
        "knpuniversity/oauth2-client-bundle": "^2.3",
        "league/oauth2-github": "^3.0",
        "league/oauth2-google": "^4.0",
        "liip/imagine-bundle": "^2.3",
        "pagerfanta/pagerfanta": "^4.2",
        "pagerfanta/twig": "*",
        "phpdocumentor/reflection-docblock": "^5.2",
        "symfony/apache-pack": "^1.0",
        "symfony/asset": "*",
        "symfony/asset-mapper": "*",
        "symfony/console": "*",
        "symfony/dotenv": "*",
        "symfony/expression-language": "*",
        "symfony/flex": "*",
        "symfony/form": "*",
        "symfony/framework-bundle": "*",
        "symfony/http-client": "*",
        "symfony/intl": "*",
        "symfony/mailer": "*",
        "symfony/mime": "*",
        "symfony/monolog-bundle": "^4.0",
        "symfony/notifier": "*",
        "symfony/process": "*",
        "symfony/property-access": "*",
        "symfony/property-info": "*",
        "symfony/runtime": "*",
        "symfony/security-bundle": "*",
        "symfony/serializer": "*",
        "symfony/stimulus-bundle": "^2.13",
        "symfony/string": "*",
        "symfony/translation": "*",
        "symfony/twig-bundle": "*",
        "symfony/validator": "*",
        "symfony/web-link": "*",
        "symfony/yaml": "*",
        "twig/extra-bundle": "^3.0",
        "twig/twig": "^3.0"
    },
    "require-dev": {
        "doctrine/doctrine-fixtures-bundle": "^4.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^2.0",
        "phpstan/phpstan-symfony": "^2.0",
        "phpunit/phpunit": "^12",
        "rector/rector": "^2.0",
        "rector/type-perfect": "^2.0",
        "roave/security-advisories": "dev-latest",
        "symfony/browser-kit": "*",
        "symfony/css-selector": "*",
        "symfony/debug-bundle": "*",
        "symfony/maker-bundle": "^1.0",
        "symfony/phpunit-bridge": "*",
        "symfony/stopwatch": "*",
        "symfony/var-dumper": "*",
        "symfony/web-profiler-bundle": "*",
        "tomasvotruba/type-coverage": "^2.0"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "symfony/flex": true,
            "symfony/runtime": true,
            "phpstan/extension-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd",
            "importmap:install": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "translate": [
            "@translate-all"
        ],
        "translate-all": {
            "en": "./bin/console translation:extract --format=yaml --domain=messages --force en",
            "es": "./bin/console translation:extract --format=yaml --domain=messages --force es",
            "de": "./bin/console translation:extract --format=yaml --domain=messages --force de"
        },
        "test-phpunit": ["make tests"],
        "test-phpstan": ["vendor/bin/phpstan analyse --memory-limit=2G"],
        "test-phpstan-baseline": ["vendor/bin/phpstan analyse --generate-baseline --memory-limit=2G"],
        "ci": ["@test-phpunit", "@test-phpstan"],
        "coverage": ["APP_ENV=test symfony console doctrine:database:drop --force || true", "APP_ENV=test symfony console doctrine:database:create", "XDEBUG_MODE=coverage php vendor/bin/phpunit --coverage-text"],
        "coverage-html": ["APP_ENV=test symfony console doctrine:database:drop --force || true", "APP_ENV=test symfony console doctrine:database:create", "XDEBUG_MODE=coverage php vendor/bin/phpunit --coverage-html coverage"],
        "check" : [
            "echo 'Check for outdated assets:'",
            "bin/console importmap:outdated",
            "echo 'Check for outdated PHP deps:'",
            "composer outdated",
            "echo 'Check for outdated Recipes:'",
            "composer recipes:update"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "8.*"
        }
    }
}
